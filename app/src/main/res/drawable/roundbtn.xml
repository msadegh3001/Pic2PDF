<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50pt" />
            <stroke android:width="1dip" android:color="@color/pink600" />
            <gradient android:angle="-90" android:startColor="@color/pink600" android:endColor="@color/pink600"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50pt" />
            <stroke android:width="1dip" android:color="@color/pink600" />
            <solid android:color="@color/pink600"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50pt" />
            <stroke android:width="1dip" android:color="@color/pink600" />
            <gradient android:angle="-90" android:startColor="@color/pink600" android:endColor="@color/pink600" />
        </shape>
    </item>
</selector>